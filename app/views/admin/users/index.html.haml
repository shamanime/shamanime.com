%h1= @title
%table
  %thead
    %tr
      %th Username
      %th Name
      %th Email
      %th Last post
      %th Last login
      %th Actions
  %tbody
    - for user in @users
      %tr
        %td= user.username
        %td= user.name
        %td= user.email
        %td= link_to user.last_post.title, user.last_post, :target => "_blank"
        %td= l user.last_sign_in_at, :format => :short
        %td
          = link_to "Edit", edit_admin_user_path(user)
          |
          = link_to "Delete", admin_user_path(user), :confirm => 'Are you sure?', :method => :delete, :title => "Delete user"
= link_to "New user", new_admin_post_url, :class => "btn primary"